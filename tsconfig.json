{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "typeRoots": ["node_modules/@types", "src/@types"]
    },
    "include": ["src", "test/profiles"],
    "exclude": ["/*.spec.ts", "/mocks/*", "typings"]
}
